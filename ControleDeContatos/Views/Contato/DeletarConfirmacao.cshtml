@model ContatoModel
@{
    ViewData["Title"] = "Confirmação de Exclusão de Contato";
}

<div class="text-center">
    <h3>Deseja realmente apagar o contato (@Model.Name) ?</h3>
</div>

<div class="text-center">
    <a class="btn btn-primary" role="button" asp-controller="Contato" asp-action="Index">Cancelar</a>
    <a class="btn btn-danger" role="button" asp-controller="Contato" asp-route-id="@Model.Id" asp-action="Deletar">Confirmar</a>
</div>
