@model ContatoModel
@{
    ViewData["Title"] = "Cadastro de Contatos";
}

<div class="text-center">
    <h1 class="display-4">Cadastrar Contato</h1>
</div>

<form asp-controller="Contato" asp-action="Criar" method="post">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" asp-for="Name" class="form-control" placeholder="Insira o nome...">
        @Html.ValidationMessageFor(x => x.Name) <!--Usando a validação de mensagem de erro passada pelo models-->
    </div>
    <div class="form-group">
        <label for="email">Email</label>
        <input type="email" asp-for="Email" class="form-control" placeholder="Insira o email...">
        @Html.ValidationMessageFor(x => x.Email) <!--Usando a validação de mensagem de erro passada pelo models-->
    </div>
    <div class="form-group">
        <label for="telefone">Telefone</label>
        <input type="tel" asp-for="Telefone" class="form-control" placeholder="Insira o telefone...">
        @Html.ValidationMessageFor(x => x.Telefone) <!--Usando a validação de mensagem de erro passada pelo models-->
    </div>
    <br />

    <button type="submit" class="btn btn-primary">Adicionar</button>
    <a class="btn btn-secondary" asp-controller="Contato" asp-action="Index" role="button">Voltar</a>
</form>